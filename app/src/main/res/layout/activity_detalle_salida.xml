<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".vista.DetalleSalidaActivity">

    <!-- Fila de Nombre -->

    <TextView
        android:id="@+id/detalleTipoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Estudiante"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/detalleImagen"
        android:layout_width="270dp"
        android:layout_height="230dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:text="USUARIO:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleNomUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del usuario"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Fila de Código de Usuario -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="14dp"
            android:text="COD USUARIO:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleCodigoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de Usuario"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Fila de Tipo de Documento -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:text="TIPO DOCUMENTO:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleTipoDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Documento"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Fila de Número de Documento -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:text="N° DOCUMENTO:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleNumDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Documento"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Fila de Fecha de SALIDA -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="18dp"
            android:text="FEC SALIDA:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleFechaSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Salida"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Fila de Hora de SALIDA -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="18dp"
            android:text="HORA SALIDA:"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleHoraSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de Salida"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Fila de Tipo de Movilidad -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:text="MOVILIDAD CON LA QUE SALIÓ:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleTipoMovilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Movilidad"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp">

        <!-- Botón HISTORIAL -->
        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HISTORIAL"
            android:textColor="@android:color/white"
            android:backgroundTint="#033657" />

        <!-- Botón REGRESAR -->
        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="REGRESAR"
            android:textColor="@android:color/white"
            android:backgroundTint="#033657" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>